<%= form_for @character_class, :url => classes_path do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "Name", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :blizzard_id, placeholder: "Blizzard ID", class: 'form-control' %>
  </div>
  <div class="form-group">
    <button class="btn btn-large btn-primary">Add Class</button>
  </div>
<% end %>