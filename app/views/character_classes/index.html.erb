<% provide(:title, 'Classes') %>

<div class="row">
  <h1 class="center">Classes</h1>

  <div class="col-md-3">
    <h1>
      <small>
        Add Class
        <% if can?(:sync, CharacterClass) %>
          <%= link_to(fa_icon("refresh"), sync_classes_path, method: :post, title: "Sync all Classes from Battle.net", data: {toggle: 'tooltip'}) %>
        <% end %>
      </small>
    </h1>
    <%= render 'character_class_form' %>
  </div>

  <div class="col-md-9">
    <table class="character-class table table-striped table-bordered table-white" id="character-class-table" data-source="<%= classes_path(format: :json) %>">
      <thead>
        <th>Name</th>
        <th>Blizzard ID</th>
        <% if can? :manage, CharacterClass %>
          <th class="nosort">Edit</th>
        <% end %>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>