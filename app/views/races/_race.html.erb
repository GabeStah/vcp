<li>
  <%= best_in_place race, :name, :type => :input %>
  <%= best_in_place race, :blizzard_id, :type => :input %>
  <%= best_in_place race, :side, :type => :select, :collection => [["horde", "horde"], ["alliance", "alliance"], ["neutral", "neutral"]] %>
