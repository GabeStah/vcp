<%= form_for(@race) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Add a new Race..." %>
    <%= f.text_field :blizzard_id, placeholder: "Blizzard ID" %>
    <%= f.select :side, WOW_FACTION_HASH, placeholder: "Faction" %>
  </div>
  <%= f.submit "Add", class: "btn btn-large btn-primary" %>
<% end %>