<% provide(:title, "Edit character") %>
<h1>Update character</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@character) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :realm %>
      <%= f.text_field :realm %>

      <%= f.label :locale %>
      <%= f.text_field :locale %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>