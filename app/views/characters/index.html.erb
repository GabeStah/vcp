<% provide(:title, 'All characters') %>
<h1>All characters</h1>

<%= link_to "New Character", new_character_path, class: "btn btn-large btn-primary" %>

<% if @claimed_characters.present? %>
  <table class="characters table table-striped table-bordered table-white">
    <thead>
      <th>Name</th>
      <th>Class</th>
      <th>Guild</th>
      <th>Raids</th>
      <th>Achievement Points</th>
      <th>Joined</th>
      <% if @current_user %>
        <th>Edit</th>
      <% end %>
    </thead>
    <tbody>
    <%= render @claimed_characters %>
    </tbody>
  </table>
<% end %>

<table class="characters table table-striped table-bordered table-white">
  <thead>
    <th>Name</th>
    <th>Class</th>
    <th>Guild</th>
    <th>Raids</th>
    <th>Achievement Points</th>
    <th>Joined</th>
  </thead>
  <tbody>
    <%= render @characters %>
  </tbody>
</table>
