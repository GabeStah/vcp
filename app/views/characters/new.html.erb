<% provide(:title, 'Add Character') %>
<h1>Add Character</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@character) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Kulldar" %>

      <%= f.label :realm %>
      <%= f.text_field :realm, placeholder: "Hyjal" %>

      <%= f.label :region %>
      <%= f.text_field :region, placeholder: "US" %>

      <%= f.submit "Add Character", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>