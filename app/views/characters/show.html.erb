<% provide(:title, @character.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= link_to @character.name, edit_character_path(name: @character.name, realm: @character.realm, region: @character.region) %>
      </h1>
      <p>Achievement Points: <%= @character.achievement_points %></p>
      <p>Verified: <%= @character.verified? ? 'Yes' : 'No' %></p>
      <p>Last Synced: <%= @character.synced_at ? "#{distance_of_time_in_words_to_now(@character.synced_at, include_sections: true).camelize} ago" : 'Never' %></p>
    </section>
  </aside>
</div>