<% provide(:title, 'Standings') %>
<h1>Edit Standing for <%= @standing.character.full_title %></h1>

<h2>Transfer Ownership</h2>

<div>
  <table class="standings table table-striped table-bordered table-white" id="standing-transfer-table" data-source="<%= list_characters_path(format: :json) %>">
    <thead>
    <th>Name</th>
    <th>Class</th>
    <th>Realm</th>
    <th>Joined</th>
    <% if can? :update, @standing %>
      <th>Edit</th>
    <% end %>
    </thead>
    <tbody>
    </tbody>
  </table>
</div>