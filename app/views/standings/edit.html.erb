<% provide(:title, 'Standings') %>
<div class="row">
  <div class="col-md-12">
    <h1 class="center">Edit Standing for <%= @standing.character.full_title %></h1>
    <h1>
      <small>
        Transfer Ownership
      </small>
    </h1>
  </div>

  <div class="col-md-12">
    <table class="standings table table-striped table-bordered table-white" id="standing-transfer-table" data-source="<%= list_characters_path(format: :json) %>">
      <thead>
      <th>Name</th>
      <th>Class</th>
      <th>Realm</th>
      <th>Joined</th>
      <% if can? :update, @standing %>
        <th class="nosort">Edit</th>
      <% end %>
      </thead>
      <tbody>
      </tbody>
    </table>
  </div>
</div>