<% provide(:title, 'Standings') %>
<h1>Standings</h1>

<% if @standings.any? %>
  <table class="standings table table-striped table-bordered table-white">
    <thead>
    <th>Name</th>
    <th>Class</th>
    <th>Guild</th>
    <th>Realm</th>
    <th>Points</th>
    <% if current_user && current_user.admin? %>
      <th>Delete</th>
    <% end %>
    </thead>
    <tbody>
    <%= render @standings %>
    </tbody>
  </table>
<% else %>
  <h2>No Records Found</h2>
<% end %>