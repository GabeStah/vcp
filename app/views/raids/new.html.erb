<% provide(:title, 'Add Raid') %>
<h1>Add Raid</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@raid) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :zone %>
      <%= f.select :zone, Zone.where(zone_type: 'raid').order(:name).collect { |z| [z.name, z.id] } %>

      <%= f.label :started_at %>
      <%= f.text_field :started_at, value: @defaultStart %>

      <%= f.label :ended_at %>
      <%= f.text_field :ended_at, value: @defaultEnd %>

      <%= f.submit "Add Raid", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>